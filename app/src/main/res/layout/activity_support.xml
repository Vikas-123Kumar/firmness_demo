<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".Support">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            app:navigationIcon="@drawable/ic_arrow_back_black_36dp"
            android:layout_height="?attr/actionBarSize">


            <TableRow
                android:id="@+id/Relative1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:gravity="center"
                android:layout_marginRight="2dp">


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center|center_horizontal"

                    android:layout_weight="1"
                    android:src="@drawable/small_logo" />

                <Button
                    android:id="@+id/setting_action"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_weight="0"
                    android:layout_margin="7dp"
                    android:background="@drawable/ic_settings_black_36dp">

                </Button>
            </TableRow>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/app_bar"
        android:layout_height="match_parent">
        <LinearLayout

            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/app_bar"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="100dp"

            android:background="#2CD3D3D3">


            <ImageView
                android:id="@+id/image1"
                android:layout_width="200dp"
                android:layout_height="130dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="9dp"
                android:src="@drawable/small_logo" />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image1"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="75dp"
                android:text="Contact us:"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18sp">

            </TextView>

            <TextView
                android:id="@+id/text11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="75dp"
                android:gravity="center_horizontal"
                android:text="hello@infyulabs.com"
                android:textSize="16sp"
                android:textStyle="" />

            <TextView
                android:id="@+id/www"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text11"
                android:layout_marginTop="35dp"
                android:gravity="center_horizontal"
                android:text="www.infyulabs.com"
                android:textSize="16sp"
                android:textStyle="" />

        </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>